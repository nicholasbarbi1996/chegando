{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "app/javascript",
    "paths": {
      "@/*": ["*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["app/javascript/**/*"]
}